{
  "name": "@sui/mono",
  "version": "0.6.0",
  "description": "Commit and release manager",
  "main": "index.js",
  "bin": {
    "sui-mono": "./bin/sui-mono.js"
  },
  "scripts": {
    "build": "echo \"building...\"",
    "phoenix": "rm -Rf node_modules && npm it"
  },
  "keywords": [
    "schibsted",
    "commitizen",
    "release"
  ],
  "author": "Ignacio Tolstoy <ignacio.tolstoy@scmspain.com>",
  "license": "MIT",
  "devDependencies": {},
  "dependencies": {
    "@sui/cz": "0.0.2",
    "commander": "2.9.0",
    "commitizen": "2.8.6",
    "conventional-changelog": "1.1.0",
    "cz-conventional-changelog": "1.2.0",
    "ghooks": "1.3.2",
    "validate-commit-msg": "2.12.1"
  },
  "config": {
    "sui-mono": {
      "customScopes": [
        "check",
        "commit",
        "release"
      ]
    },
    "ghooks": {
      "commit-msg": "validate-commit-msg"
    },
    "validate-commit-msg": {
      "types": "../../../src/types.json"
    }
  }
}
